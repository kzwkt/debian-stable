#!/bin/bash

to_emoji_string() {
  local input="$1"
  local emoji=""
  local sep=$'\u200A'  # Hair space separator

  # Digit emojis indexed by digit character
  local digits=(0ï¸âƒ£ 1ï¸âƒ£ 2ï¸âƒ£ 3ï¸âƒ£ 4ï¸âƒ£ 5ï¸âƒ£ 6ï¸âƒ£ 7ï¸âƒ£ 8ï¸âƒ£ 9ï¸âƒ£)

  # Letter to regional indicator emoji map
  declare -A letters_map=(
    [A]="ğŸ‡¦" [B]="ğŸ‡§" [C]="ğŸ‡¨" [D]="ğŸ‡©" [E]="ğŸ‡ª" [F]="ğŸ‡«" [G]="ğŸ‡¬" [H]="ğŸ‡­"
    [I]="ğŸ‡®" [J]="ğŸ‡¯" [K]="ğŸ‡°" [L]="ğŸ‡±" [M]="ğŸ‡²" [N]="ğŸ‡³" [O]="ğŸ‡´" [P]="ğŸ‡µ"
    [Q]="ğŸ‡¶" [R]="ğŸ‡·" [S]="ğŸ‡¸" [T]="ğŸ‡¹" [U]="ğŸ‡º" [V]="ğŸ‡»" [W]="ğŸ‡¼" [X]="ğŸ‡½"
    [Y]="ğŸ‡¾" [Z]="ğŸ‡¿"
  )

  for (( i=0; i<${#input}; i++ )); do
    char="${input:i:1}"

    if [[ "$char" =~ [0-9] ]]; then
      emoji+="${digits[$char]}"
    else
      char_upper=$(echo "$char" | tr '[:lower:]' '[:upper:]')
      if [[ -n "${letters_map[$char_upper]}" ]]; then
        emoji+="${letters_map[$char_upper]}${sep}"
      else
        emoji+="$char"
      fi
    fi
  done

  # Remove trailing separator if present
  emoji="${emoji%$sep}"

  echo "$emoji"
}

# Main entry point
if [[ $# -eq 0 ]]; then
  echo "Usage: $0 <string>"
  exit 1
fi

to_emoji_string "$*"
